{
    "name": "segura/lib{{ app_name|lower }}",
    "authors": [
        {
            "name": "Matthew Baggett",
            "email": "matt.baggett@segura.co.uk"
        },
        {
            "name": "Segura Systems",
            "email": "systems@segura.co.uk"
        }
    ],
    "licence": "proprietary",
    "time": "{{ release_time }}",
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:segurasystems/libCommon.git"
        }
    ],
    "require": {
        "segura/libcommon": "dev-master"
    },
    "require-dev": {
        "kint-php/kint": "^1.0",
        "fzaninotto/Faker": "^1.6.0",
        "phpunit/phpunit": "^6.2",
        "php-vcr/php-vcr": "^1.2.8",
        "php-vcr/phpunit-testlistener-vcr": "*"
    },
    "autoload": {
        "psr-4": {
            "Segura\\SDK\\{{ app_name }}\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Segura\\SDK\\{{ app_name }}\\Test\\": "tests/"
        }
    }
}
